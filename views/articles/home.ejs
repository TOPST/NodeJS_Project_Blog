<div class="container">
	<h1>Blog Articles</h1>
	<a href="/articles/new" class="new-bouton">New articles</a>
	<% articles.forEach(article => { %>
	<div class="item-description">
		<h1><%= article.title %></h1>
		<div><%= article.date %></div>
		<div><%= article.description %></div>
	</div>
	<div class="item-boutons">
		<a href="/articles/<%= article.slug %>" class="read-bouton">Read more</a>
		<a href="/articles/edit/<%= article.id %>" class="edit-bouton">Edit</a>
		<form action="/articles/<%= article.id %>?_method=DELETE" method="POST">
			<button type="submit" class="delete-button">Delete</button>
		</form>
	</div>
	<% }); %>
</div>
