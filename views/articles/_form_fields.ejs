<div class="form-group">
	<label for="title">Title</label>
	<input required value="<%= article.title %>" type="text" name="title" id="title" class="form">
</div>
<div class="form-group">
	<label for="description">Description</label>
	<textarea name="description" id="description" class="form"><%= article.description %></textarea>
</div>
<div class="form-group">
	<label for="markdown">Markdown</label>
	<textarea required name="markdown" id="markdown" class="form"><%= article.markdown %></textarea>
</div>
<a href="/articles" class="cancel-button">Cancel</a>
<button type="submit" class="submit-button">Submit</button>